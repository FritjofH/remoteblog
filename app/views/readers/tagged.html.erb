<% title @tag.name%>
<% description "All posts with the tag: " + @tag.name %>

<div class='row'>
  <% @posts.each do |post| %>
    <div class='col-md-6 col-lg-4 mb-4'>
      <div class="card post-card" style="height:450px;">
        <%= image_tag(post.header_image, class:"header-image", style: "height: 200px;") %>
        <div class="card-body d-flex flex-column">
            <em>
              <small>
                <%= post.published_at.to_s(:nozone)%>
                </small>
            </em>
          <h5 class="card-title"><%= post.title%></h5>
          <p class="card-text"><%= truncate(post.description, length: 200) %></p>
          <%= link_to 'Read Post', blog_post_path(post), class: 'btn btn-primary mt-auto' %>
        </div>
      </div>
    </div>
  <% end %>
</div>