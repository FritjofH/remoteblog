<div class="card-body">
  <%= form_with(model: @about, url: edit_about_path, method: :patch) do |form| %>
    <div class="row mx-0">
      <%= form.label :description, class: 'form-label' %>
      <%= form.rich_text_area :description, class: 'form-control' %>
    </div>

    <div class="row mx-0 mt-2">
      <%= form.label :title, class: 'form-label ' %>
      <%= form.text_field :title, class: 'form-control' %>
    </div>

    <div class="row mt-2 mx-0">
      <%= form.label :body, class: 'form-label' %>
      <%= form.rich_text_area :body, class: 'form-control' %>
    </div>

    <div class="row mt-2 mx-0">
      <%= form.label :image, class: 'form-label' %>
      <%= form.file_field :image, class: 'form-control' %>
      <% if @about.image.present? %>
        <div class="mt-2"> 
          <small>Current image:</small>
          <%= image_tag(@about.image_medium, width: '100%') %>
        </div>
      <% end %>
    </div>

    <div class="actions mt-2 d-grid gap-2">
      <%= form.submit class: 'btn btn-primary btn-block' %>
    </div>
  <% end %>
</div>