<%= form_with(model: post, data: { remote: "true" }) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation" class="row mx-0">
      <h4 class='text-danger'>Post could not be saved</h4>
      <ul>
        <% post.errors.each do |error| %>
          <li class="row mx-0 text-danger"><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row mx-0">
    <%= form.label :title, class: 'form-label ' %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="row mt-2 mx-0">
    <%= form.label :description, class: 'form-label' %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="row mt-2 mx-0">
    <%= form.label :header_image, class: 'form-label' %>
    <%= form.file_field :header_image, class: 'form-control' %>
    <div>
      <% if post.header_image.present? %>
        <small>Current image:</small>
        <%= image_tag(post.header_image, width: '100%') %>
      <% end %>
    </div>
  </div>

  <div class="actions mt-2 d-grid gap-2">
    <%= form.submit class: 'btn btn-primary btn-block' %>
  </div>
<% end %>
