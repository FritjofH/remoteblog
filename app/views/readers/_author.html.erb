<% if @post.author.avatar.present? %>
  <div class="image text-center">
  <% if @post.author.bio.present? %>
    <%= image_tag @post.author.avatar_thumbnail, 
      class: "rounded-circle", 
      loading: "lazy", 
      width: "150", 
      height: "150", 
      alt: @post.author.bio
    %>
  <% else %>
    <%= image_tag @post.author.avatar_thumbnail, 
      class: "rounded-circle", 
      loading: "lazy", 
      width: "150", 
      height: "150" 
    %>
  <% end %>
  </div>
<% end %>

<% if @post.author.name.present? %>
  <div>
    <h6 class="text-center pt-2">
      <%= @post.author.name %>
    </h6>
  </div>
<% end %>
<% if @post.author.bio.present? %>
  <div>
    <p class="text-center">
      <em>
        <small>
          <%= @post.author.bio %>
        </small>
      </em>
    </p>
  </div>
<% end %>