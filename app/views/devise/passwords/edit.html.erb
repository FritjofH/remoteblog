<div class="row">
  <div class="col-sm-4">
    <div class="card">
      <div class="card-header">
      <h2><%= title "Change Your Password" %></h2>
      </div>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>

          <div class="field row mx-3">
            <%= f.label :password, "New password", class: 'form-label' %><br />
            <% if @minimum_password_length %>
              <em class='form-text'>(<%= @minimum_password_length %> characters minimum)</em><br />
            <% end %>
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control' %>
          </div>

          <div class="field row pt-3 mx-3">
            <%= f.label :password_confirmation, "Confirm new password", class: 'form-label' %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
          </div>

          <div class="actions row pt-3 mx-3">
            <%= f.submit "Change my password", class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
      <div class="card-footer">
        <div class="mx-3">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
