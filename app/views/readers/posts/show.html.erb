<div class="row">
  <div class="col-lg-10 offset-lg-1">
    <div class="card post-card mb-5">
      <div class="header-image" style="background-image: url(<%= url_for(@post.header_image) %>)"></div>
      <div class="card-body">
        <div class='pe-5 ps-5'>
          <em>
            <small>
              <%= @post.published_at.to_s(:nozone)%>
              </small>
          </em>
          <h1 class="card-title mb-4"><%= @post.title%></h1>
          <% @post.elements.each do |element| %>
            <% if element.image? %>
              <div class="image-element mb-5">
                <%= image_tag(element.image)%>
              </div>
            <% else %>
              <div class="content-element mb-5">
                <%= element.content %>
              </div>
            <% end %>
          <% end %>
        </div>
        <div class="pe-5 ps-5">
          <%= render 'author', post: @author %>
        </div>
      </div>
      <% if @tags.present? %>
        <div class="card-footer d-flex justify-content-center">
          <% @tags.each do |tag |%>
            <span class="badge bg-secondary me-1"><%= tag.name %></span>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>